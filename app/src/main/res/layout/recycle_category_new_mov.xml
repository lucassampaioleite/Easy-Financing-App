<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView android:id="@+id/category_cardview_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#384C59"
        android:layout_marginVertical="2.5dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView android:id="@+id/dialog_recycle_category_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"

                android:layout_margin="10dp"
                android:src="@drawable/cat_ic_account_balance"
                app:tint="@color/blue_light" />

            <ImageView android:id="@+id/dot"
                android:layout_width="5dp"
                android:layout_height="5dp"

                android:src="@drawable/round_background_blue"
                android:layout_gravity="center"/>

            <TextView android:id="@+id/dialog_recycle_category_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_marginLeft="10dp"
                android:text="SalÃ¡rio"
                android:fontFamily="@font/inter_semibold"
                android:textColor="@color/blue_light"
                android:textSize="20sp"
                android:gravity="center_vertical"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>