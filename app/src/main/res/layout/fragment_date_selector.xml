<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/calendar_fg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:context=".ui.fragments.newmov.DateSelector"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <TextView android:id="@+id/fg_title"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Qual a data da movimentação?"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:fontFamily="@font/inter_semibold"
            android:layout_marginBottom="32dp"
            android:textAlignment="center"

            android:layout_marginTop="30dp"
            app:layout_constraintTop_toTopOf="parent" />

        <CalendarView android:id="@+id/calendario"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/calendar"

            android:layout_marginTop="45dp"

            android:weekDayTextAppearance="@style/WeekDayTextAppearance"
            android:dateTextAppearance="@style/DateTextAppearance"
            android:focusedMonthDateColor="@android:color/white"
            android:unfocusedMonthDateColor="@android:color/white"
            android:selectedDateVerticalBar="@android:color/white"

            app:layout_constraintTop_toBottomOf="@+id/fg_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>