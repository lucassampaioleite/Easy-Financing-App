<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:background="@drawable/side_nav_bar"
    android:layout_gravity="center"
    android:padding="35dp">

    <ImageButton android:id="@+id/extract_side_menu_border"

        android:layout_width="66dp"
        android:layout_height="66dp"
        android:background="@drawable/round_background_blue"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/extract_side_menu_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/budget_side_menu_border"/>

    <ImageButton android:id="@+id/extract_side_menu_inner"

        android:layout_width="63dp"
        android:layout_height="63dp"
        android:background="@drawable/round_mid_blue"
        android:contentDescription="@string/submit_personal"
        android:src="@drawable/ic_menu_extract"

        app:layout_constraintTop_toTopOf="@+id/extract_side_menu_border"
        app:layout_constraintBottom_toBottomOf="@+id/extract_side_menu_border"
        app:layout_constraintStart_toStartOf="@+id/extract_side_menu_border"
        app:layout_constraintEnd_toEndOf="@+id/extract_side_menu_border"/>

    <TextView android:id="@+id/extract_side_menu_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"

        android:text="Extrato"
        android:textColor="@color/blue_light"
        android:fontFamily="@font/inter"
        android:gravity="center"


        app:layout_constraintTop_toBottomOf="@+id/extract_side_menu_border"
        app:layout_constraintBottom_toTopOf="@+id/card_side_menu_border"
        app:layout_constraintStart_toStartOf="@+id/extract_side_menu_border"
        app:layout_constraintEnd_toEndOf="@+id/extract_side_menu_border"/>



    <ImageButton android:id="@+id/budget_side_menu_border"

        android:layout_width="66dp"
        android:layout_height="66dp"
        android:background="@drawable/round_background_blue"
        android:layout_marginLeft="40dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/budget_side_menu_title"
        app:layout_constraintStart_toEndOf="@+id/extract_side_menu_border"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton android:id="@+id/budget_side_menu_inner"

        android:layout_width="63dp"
        android:layout_height="63dp"
        android:background="@drawable/round_mid_blue"
        android:src="@drawable/ic_menu_savings"

        app:layout_constraintTop_toTopOf="@+id/budget_side_menu_border"
        app:layout_constraintBottom_toBottomOf="@+id/budget_side_menu_border"
        app:layout_constraintStart_toStartOf="@+id/budget_side_menu_border"
        app:layout_constraintEnd_toEndOf="@+id/budget_side_menu_border"/>

    <TextView android:id="@+id/budget_side_menu_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"

        android:text="Orçamentos"
        android:textColor="@color/blue_light"
        android:fontFamily="@font/inter"
        android:gravity="center"

        app:layout_constraintTop_toBottomOf="@+id/budget_side_menu_border"
        app:layout_constraintBottom_toTopOf="@+id/categories_side_menu_border"
        app:layout_constraintStart_toStartOf="@+id/budget_side_menu_border"
        app:layout_constraintEnd_toEndOf="@+id/budget_side_menu_border"/>



    <ImageButton android:id="@+id/card_side_menu_border"

        android:layout_width="66dp"
        android:layout_height="66dp"
        android:background="@drawable/round_background_blue"

        app:layout_constraintTop_toBottomOf="@+id/extract_side_menu_border"
        app:layout_constraintBottom_toTopOf="@+id/card_side_menu_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/categories_side_menu_border"/>

    <ImageButton android:id="@+id/card_side_menu_inner"

        android:layout_width="63dp"
        android:layout_height="63dp"
        android:background="@drawable/round_mid_blue"
        android:src="@drawable/ic_menu_credit_card"

        app:layout_constraintTop_toTopOf="@+id/card_side_menu_border"
        app:layout_constraintBottom_toBottomOf="@+id/card_side_menu_border"
        app:layout_constraintStart_toStartOf="@+id/card_side_menu_border"
        app:layout_constraintEnd_toEndOf="@+id/card_side_menu_border"/>

    <TextView android:id="@+id/card_side_menu_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Cartões"
        android:textColor="@color/blue_light"
        android:fontFamily="@font/inter"
        android:gravity="center"

        app:layout_constraintTop_toBottomOf="@+id/card_side_menu_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/card_side_menu_border"
        app:layout_constraintEnd_toEndOf="@+id/card_side_menu_border"/>



    <ImageButton android:id="@+id/categories_side_menu_border"

        android:layout_width="66dp"
        android:layout_height="66dp"
        android:background="@drawable/round_background_blue"
        android:layout_marginLeft="40dp"

        app:layout_constraintTop_toBottomOf="@+id/budget_side_menu_title"
        app:layout_constraintBottom_toTopOf="@+id/categories_side_menu_title"
        app:layout_constraintStart_toEndOf="@+id/card_side_menu_border"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageButton android:id="@+id/categories_side_menu_inner"

        android:layout_width="63dp"
        android:layout_height="63dp"
        android:background="@drawable/round_mid_blue"
        android:src="@drawable/ic_menu_category"

        app:layout_constraintTop_toTopOf="@+id/categories_side_menu_border"
        app:layout_constraintBottom_toBottomOf="@+id/categories_side_menu_border"
        app:layout_constraintStart_toStartOf="@+id/categories_side_menu_border"
        app:layout_constraintEnd_toEndOf="@+id/categories_side_menu_border"/>

    <TextView android:id="@+id/categories_side_menu_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Categorias"
        android:textColor="@color/blue_light"
        android:fontFamily="@font/inter"
        android:gravity="center"

        app:layout_constraintTop_toBottomOf="@+id/categories_side_menu_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/categories_side_menu_border"
        app:layout_constraintEnd_toEndOf="@+id/categories_side_menu_border"/>

</androidx.constraintlayout.widget.ConstraintLayout>